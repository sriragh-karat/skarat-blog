<h1>All Posts</h1>

<ul class="post-list">
{% for post in collections.posts | reverse %}
  <li>
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <p><small>{{ post.date.toDateString() }}</small></p>
    <p>{{ post.data.description }}</p>
  </li>
{% endfor %}
</ul>
